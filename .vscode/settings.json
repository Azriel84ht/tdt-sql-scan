{
  // Formatea al guardar
  "editor.formatOnSave": true,
  // Organiza imports en Java al guardar
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Checkstyle extension config
  "checkstyle.configurationFile": "${workspaceFolder}/config/checkstyle/checkstyle.xml",
  "checkstyle.enable": true,
  // Para Java, usar el formateador integrado (Red Hat) por defecto
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.formatOnSave": true
  },
  // Para otros lenguajes comunes
  "[yaml]": {
    "editor.formatOnSave": true
  }
}